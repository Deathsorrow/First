<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="107dp"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/btn0"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="52dp"
        android:text="@string/name"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/tetout"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn0"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-18dp"
        android:layout_marginTop="95dp"
        android:singleLine="true"
        android:text="@string/fenshu"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-194dp"
        android:layout_marginTop="169dp"
        android:layout_toEndOf="@+id/tetout"
        android:text="@string/jiasan" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn3"
        android:layout_marginStart="-195dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/tetout"
        android:text="@string/jiaer" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn2"
        android:layout_marginStart="-194dp"
        android:layout_marginTop="21dp"
        android:layout_toEndOf="@+id/tetout"
        android:text="@string/jiayi" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="77dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="59dp"
        android:text="@string/qingling" />


</RelativeLayout>